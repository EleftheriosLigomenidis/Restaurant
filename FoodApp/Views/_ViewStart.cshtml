@{
    string CurrentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    string layout;
    switch (CurrentName)
    {
        case "Admin":
              layout = "~/Views/Shared/_adminLayout.cshtml";
      
            break;
        default:
            //Admin layout
          layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
    Layout = layout;
}   